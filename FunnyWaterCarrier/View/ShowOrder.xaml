<UserControl x:Class="FunnyWaterCarrier.View.ShowOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FunnyWaterCarrier.View">
    <GroupBox Header="Показать заказы" Height="250" Width="660">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Command="{Binding Accept}" Content="Принять" HorizontalAlignment="Left" Height="20" Margin="560,180,0,0" VerticalAlignment="Top" Width="60"/>
            <DataGrid ItemsSource="{Binding Orders}" AutoGenerateColumns="False" x:Name="employeeGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Width="520" Height="180">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Number}" Header="Номер" Width="170"/>
                    <DataGridTextColumn Binding="{Binding Product}" Header="Товар" Width="180"/>
                    <DataGridTextColumn Binding="{Binding Worker}" Header="Сотрудник" Width="170"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
